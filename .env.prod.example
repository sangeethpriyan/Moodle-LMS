# Production Environment Configuration

# Database
DB_USERNAME=moodle_prod
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_DATABASE=moodle_wrapper_prod

# JWT Authentication
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_AT_LEAST_32_CHARACTERS
JWT_EXPIRATION=7d

# Moodle API
MOODLE_BASE_URL=https://your-production-moodle.com
MOODLE_WS_TOKEN=your_production_moodle_token

# CORS
CORS_ORIGIN=https://your-domain.com

# Frontend
VITE_API_URL=https://api.your-domain.com/api

# Backend Port (optional, defaults to 5000)
PORT=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn

# File Uploads
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760
